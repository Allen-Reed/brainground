@font-face {
  font-family: 'Poppins';
  src: url('/fonts/Poppins-SemiBold.ttf');
}

@font-face {
  font-family: 'PoppinsLight';
  src: url('/fonts/Poppins-Light.ttf');
}

@font-face {
  font-family: 'PTSans';
  src: url('/fonts/PTSans-Regular.ttf');
}

@tailwind base;
@tailwind components;
@tailwind utilities;

html,
body {
  @apply h-full overflow-hidden;
}

.app-bar-row-main {
  @apply flex;
}
